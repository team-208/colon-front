{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "airbnb-typescript", "next", "next/core-web-vitals", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["react", "@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "ignorePatterns": ["**/node_modules/**", "**/next-sitemap.config.js"],
  "rules": {
    "consistent-return": "off",
    "max-len": ["error", { "code": 150, "ignoreTemplateLiterals": true }],
    "radix": ["error", "as-needed"],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-empty-function": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "no-param-reassign": ["error", { "props": false }],
    "no-unused-vars": "off",
    "no-nested-ternary": "off",
    "no-useless-catch": "off",
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "property",
        "filter": "^__html$",
        "format": null
      },
      {
        "selector": "property",
        "filter": "^KCP_Pay_Execute",
        "format": null
      },
      {
        "selector": "default",
        "format": [
          "camelCase",
          "strictCamelCase",
          "PascalCase",
          "StrictPascalCase",
          "snake_case",
          "UPPER_CASE"
        ],
        "leadingUnderscore": "allow",
        "trailingUnderscore": "allow"
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^__", "argsIgnorePattern": "^__" }
    ],
    "prefer-destructuring": ["error", { "object": false, "array": false }],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-empty-function": ["error"],
    "react/no-array-index-key": "off",
    "react/jsx-no-useless-fragment": "off",
    "react/require-default-props": "off",
    "react/jsx-props-no-spreading": "off",
    "react/function-component-definition": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "import/no-extraneous-dependencies": "off",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref"]
      }
    ]
  }
}
